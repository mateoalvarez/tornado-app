{
    "Name": "Template Spark Job",
    "LogUri": "s3://tornado-app-emr/{user}/{job_id}/bootstrap-actions/logs",
    "AmiVersion": "5.12.0",
    "Instances":{
      "MasterInstanceType": "m4.large",
      "SlaveInstanceType": "m4.large",
      "InstanceCount": 3,
      "Placement": {
          "AvailabilityZone": "eu-west-1"
      },
      "KeepJobFlowAliveWhenNoSteps": "False",
      "TerminationProtected": "True"
    },
    "Steps":[
        {
            "Name": "Train",
            "ActionOnFailure": "TERMINATE_CLUSTER",
            "HadoopJarStep": {
                "Properties": [
                    {
                        "Key": "string",
                        "Value": "string"
                    }
                ],
                "Jar": "command-runner.jar",
                "MainClass": "string",
                "Args": [
                    "spark-submit",
                    "s3://tornado-app-emr/{user}/{job_id}/{spark-job}"
                ]
            }
        }
    ],
    "BootstrapActions":[
        {
            "Name": "Install dependencies",
            "ScriptBootstrapAction": {
                "Path": "s3://tornado-app-emr/{user}/{job_id}/{preconfig_script}",
                "Args": [
                    "string"
                ]
            }
        }
    ],
    "Applications":[
        {
            "Name": "Spark"
        }
    ],
    "Tags":[
        {
            "Key": "app",
            "Value": "tornado-app"
        },
        {
          "Key": "tier",
          "Value": "emr"
        },
        {
          "Key": "user",
          "Value": "{user}"
        }
    ],
    "ScaleDownBehavior":"TERMINATE_AT_TASK_COMPLETION",
    "EbsRootVolumeSize":50
}
